@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <AuthorizeView>
            <Authorized>
                <div class="top-row px-4">
                    <NavLink class="nav-link" href="signout" Match="NavLinkMatch.All"> Sign out </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="top-row px-4">
                    <NavLink class="nav-link" href="signin" Match="NavLinkMatch.All"> Sign in </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

